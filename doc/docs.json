{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Hux UI",
  "colors": {
    "primary": "#000000",
    "light": "#ffffff",
    "dark": "#ffffff"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "installation",
              "quickstart",
              "theming"
            ]
          },
          {
            "group": "Components",
            "pages": [
              "components/buttons",
              "components/inputs",
              "components/cards",
              "components/feedback",
              "components/avatar",
              "components/loading",
              "components/charts",
              "components/context-menu"
            ]
          },
          {
            "group": "Advanced",
            "pages": [
              "advanced/theming",
              "advanced/customization",
              "advanced/accessibility"
            ]
          }
        ]
      },
      {
        "tab": "Examples",
        "groups": [
          {
            "group": "Usage Examples",
            "pages": [
              "examples/basic-usage",
              "examples/form-building",
              "examples/data-visualization",
              "examples/theme-switching"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Package",
          "href": "https://pub.dev/packages/hux",
          "icon": "package"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/zoeglbrt/hux",
          "icon": "github"
        },
        {
          "anchor": "Issues",
          "href": "https://github.com/zoeglbrt/hux/issues",
          "icon": "bug"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "pub.dev",
        "href": "https://pub.dev/packages/hux"
      }
    ],
    "primary": {
      "type": "button",
      "label": "GitHub",
      "href": "https://github.com/zoeglbrt/hux"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/zoeglbrt/hux"
    }
  }
}
